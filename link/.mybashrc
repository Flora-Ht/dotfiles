#!/bin/bash

if [ -f /usr/share/doc/pkgfile/command-not-found.bash ]
then
	. /usr/share/doc/pkgfile/command-not-found.bash
fi

if [ "$PS1" ]
then
	complete -cf sudo
fi

export EDITOR='vim'

export PATH="$PATH:~/.local/bin:~/.dotfiles/bin:~/.gem/ruby/2.2.0/bin"
export PATH="$PATH:~/.steam/steam/steamapps/common/oO"

export GOPATH="/home/bazin_q/.go"

export LD_LIBRARY_PATH="/home/bazin_q/.froot/lib/"
export C_INCLUDE_PATH="/home/bazin_q/.froot/include/"
export CPLUS_INCLUDE_PATH="/home/bazin_q/.froot/include/"

source ~/.local/lib/colorsrc

fortune | lolcat
echo ""
todolist | lolcat

user="$EBCYAN\u$EWHITE"
date="\[\033[38;5;38m\]\D{%a %d %b %Y}$EWHITE"
time="$EBBLUE\t$EWHITE"
path="$EBLUE\w$EWHITE"

infos="$user | $date | $time | $path"

export PS1="\n[$infos]\n $EBGREEN\$ $EWHITE"

alias vim="vim --servername 'vim-server-$$'"

alias ls="ls --color --group-directories-first -h"
alias tree="tree -C"

alias add_to_gogs='git remote add gogs $(echo "gogs@git.gnidmoo.tk:gnidmoo/$(basename $(pwd)).git" | tr "[:upper:]" "[:lower:]") ; git push gogs master'

alias setxkbmap="echo 'Et ben non :D' && xscreensaver-command -lock # "
alias loadkeys="echo 'Et ben non :D' && xscreensaver-command -lock # "

alias man="man -P less"
alias eman="man -Hchromium"

# Remove Ctrl-S terminal handling
stty -ixon
