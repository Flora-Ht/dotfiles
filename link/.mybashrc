export EDITOR='vim'

export PATH="$PATH:~/.local/bin:~/.dotfiles/bin:~/.gem/ruby/2.2.0/bin"

export GOPATH="/home/bazin_q/.go"

export LD_LIBRARY_PATH="/home/bazin_q/.froot/lib/"
export C_INCLUDE_PATH="/home/bazin_q/.froot/include/"
export CPLUS_INCLUDE_PATH="/home/bazin_q/.froot/include/"

source ~/.local/lib/colorsrc

fortune | lolcat
#echo ""
#todolist | lolcat

user="$BCYAN\u$WHITE"
date="\[\033[38;5;38m\]\D{%a %d %b %Y}$WHITE"
time="$BBLUE\t$WHITE"
path="$BLUE\w$WHITE"

infos="$user | $date | $time | $path"

export PS1="\n[$infos]\n $BGREEN\$ $WHITE"

alias ls="ls --color --group-directories-first -h"

alias setxkbmap="echo 'Et ben non :D' && xscreensaver-command -lock # "
alias loadkeys="echo 'Et ben non :D' && xscreensaver-command -lock # "

alias man="man -P less"
alias eman="man -Hchromium"

# Remove Ctrl-S terminal handling
stty -ixon
